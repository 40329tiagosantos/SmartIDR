<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ddffff"
    tools:context="pt.ul.fc.di.aplicacaosmartphone.interfaceaplicacao.MenuConfiguracoesRespostas">

    <Button
        android:id="@+id/botaoSemLigacao"
        android:text="Modo Sem Ligação"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@drawable/botaopersonalizado"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textAllCaps="false"
        android:shadowRadius="5"
        android:layout_above="@+id/botaoModoPartilha"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/botaoModoPartilha"
        android:text="Modo de Partilha Controlada"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@drawable/botaopersonalizado"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textAllCaps="false"
        android:shadowRadius="5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/botaoSemLigacao" />

</RelativeLayout>
